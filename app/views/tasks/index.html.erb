<h1>All Tasks</h1>


<ul>
  <% @tasks.each do |task| %>
  <li><%= check_box_tag('box', value = '1', checked = task.completed)%>
    <%= link_to task.title, task_path(task.id) %> -
    <%= link_to fa_icon("trash-alt"), destroy_task_path(task.id), data: { confirm: "Are you sure to delete #{task.title} ?" }, method: :delete %></li>
  <% end %>
</ul>

<p class=""><%= link_to 'Create a new task', new_tasks_path, class: "btn btn-outline-secondary" %></p>
